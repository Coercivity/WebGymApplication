@model CoachAccountModel



<body style="color: #1a202c; text-align: left; background-color: #e2e8f0;">
    <h2 class="success text-center">Личный кабинет тренера</h2>

    <div class="container">
        <div class="main-body">


            <div class="row gutters-sm">
                <div class="col-md-4 mb-3">
                    <div class="card thumbnail">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <img src="~/images/profileImages/@Model.ImagePath" alt="Avatar" style="border-radius: 50%;"
                                     class="rounded-circle" width="150" />
                                <div class="mt-3">
                                    @if (Model.Surname is null)
                                    {
                                        <h4 style="font-size:24px">---</h4>
                                    }
                                    else
                                    {
                                        <h4 style="font-size:24px">@Model.Surname @Model.FirstName @Model.Patronymic</h4>
                                    }
                                    <p class="text-secondary mb-1"></p>
                                    <p class="text-muted font-size-sm">Поиск тренирующихся</p>

                                    <form class="form-inline my-2" action="@Url.Action("Index", "SearchClient")" method="get">
                                        <input type="hidden" value=@Model.Id name="coachId" />
                                        <input class="form-control mr-sm-2" type="search" name="query" placeholder="Фамилия, имя" />
                                        <button class="btn btn-primary my-2 my-sm-0" type="submit">Искать</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card mt-3 thumbnail">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                               <span>
                                   <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path class="st0" d="M13.162 18.994c.609 0 .858-.406.851-.915-.031-1.917.714-2.949 2.059-1.604 1.488 1.488 1.796 2.519 3.603 2.519h3.2c.808 0 1.126-.26 1.126-.668 0-.863-1.421-2.386-2.625-3.504-1.686-1.565-1.765-1.602-.313-3.486 1.801-2.339 4.157-5.336 2.073-5.336h-3.981c-.772 0-.828.435-1.103 1.083-.995 2.347-2.886 5.387-3.604 4.922-.751-.485-.407-2.406-.35-5.261.015-.754.011-1.271-1.141-1.539-.629-.145-1.241-.205-1.809-.205-2.273 0-3.841.953-2.95 1.119 1.571.293 1.42 3.692 1.054 5.16-.638 2.556-3.036-2.024-4.035-4.305-.241-.548-.315-.974-1.175-.974h-3.255c-.492 0-.787.16-.787.516 0 .602 2.96 6.72 5.786 9.77 2.756 2.975 5.48 2.708 7.376 2.708z" /></svg>
                                </span>
                                <span class="badge badge-valid" >Вконтакте</span>
                            </li>

                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <span>
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                         stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                                         class="feather feather-twitter mr-2 icon-inline text-info">
                                    <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path></svg>
                                </span>
                                <span class="badge badge-valid">Twitter</span>

                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <span>
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                         stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                                         class="feather feather-instagram mr-2 icon-inline text-danger">
                                    <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
                                    <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
                                    <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line></svg>
                                </span>
                                <span class="badge badge-valid">Instagram</span>
                            </li>

                        </ul>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="card mb-3 thumbnail">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0" style="font-size:16px">Логин</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @Model.Login
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 style="font-size:16px" class="mb-0">Email</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @Model.Email
                                </div>
                            </div>
                             <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0 " style="font-size:16px">Номер телефона</h6>
                                </div>
                                @if (@Model.MobileNumber is null)
                                {
                                    <div class="col-sm-9 text-secondary">
                                        ---
                                    </div>
                                }
                                else
                                {
                                    <div class="col-sm-9 text-secondary">
                                        @Model.MobileNumber
                                    </div>
                                }
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0 " style="font-size:16px">Стаж</h6>
                                </div>
                                @if (@Model.Experience is null)
                                {
                                    <div class="col-sm-9 text-secondary">
                                        ---
                                    </div>
                                }
                                else
                                {
                                    <div class="col-sm-9 text-secondary">
                                        @Model.Experience 
                                    </div>
                                }
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0 " style="font-size:16px">Спортивная степень</h6>
                                </div>
                                @if (@Model.Rank is null)
                                {
                                    <div class="col-sm-9 text-secondary">
                                        ---
                                    </div>
                                }
                                else
                                {
                                    <div class="col-sm-9 text-secondary">
                                        @Model.Rank
                                    </div>
                                }
                            </div>
                            <hr>

                            <div class="row">
                                <div class="col-sm-12" style="text-align:center; margin-top:6px">
                                    <a class="btn btn-info" asp-controller="Account" asp-action="EditCoachCredentials">Редактировать</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row gutters-sm">
                        <div class="col-sm-6 mb-3">

                        </div>
                    </div>



                </div>
            </div>

        </div>
    </div>
</body>