@model Guid

<form asp-controller="Abonement" asp-action="BuyAbonement">
    <input value="@Model" type="hidden" name="clientId" class="form-control" />
    <div id="fh5co-pricing" data-section="pricing" style="margin-top:-16px">
        <div class="container">
            <div class="row">
                <div class="col-md-12 section-heading text-center">
                    <h2 class="single-animate animate-pricing-1">Прейскурант</h2>
                    <div class="row">
                        <div class="col-md-8 col-md-offset-2 subtext single-animate animate-pricing-2">
                            <h3>Покупка абонемента</h3>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3 col-sm-6">
                    <div class="price-box to-animate">
                        <h2 class="pricing-plan">Начинающий</h2>
                        <div class="price"><sup class="currency"></sup>50<small>руб.</small></div>
                        <p>Тариф для тестирования нашего сервиса</p>
                        <hr>
                        <ul class="pricing-info">
                            <li>1 месяц действия</li>
                            <li>30 посещений</li>

                        </ul>
                        <div>
                            
                            <input type="submit" name="tariff" value="D" class="btn btn-default btn-sm" />
                        </div>
                        
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="price-box to-animate">
                        <h2 class="pricing-plan">Регулярный</h2>
                        <div class="price"><sup class="currency"></sup>250<small>руб.</small></div>
                        <p>Тариф с возможностью ведения статистики</p>
                        <hr>
                        <ul class="pricing-info">
                            <li>6 месяцев действия</li>
                            <li>180 посещений</li>

                        </ul>
                        <input type="submit" name="tariff" value="C" placeholder="Приобрести" class="btn btn-default btn-sm" />
                    </div>
                </div>
                <div class="clearfix visible-sm-block"></div>
                <div class="col-md-3 col-sm-6 to-animate">
                    <div class="price-box popular">
                        <div class="popular-text">Выгодно</div>
                        <h2 class="pricing-plan">Регулярный+</h2>
                        <div class="price"><sup class="currency"></sup>500<small>руб.</small></div>
                        <p>Самый популярный и выгодный тариф</p>
                        <hr>
                        <ul class="pricing-info">
                            <li>6 месяцев действия</li>
                            <li>Безлимитные посещения</li>

                        </ul>
                        <div>
                            <input type="submit" name="tariff" value="B" class="btn btn-default btn-sm" />
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="price-box to-animate">
                        <h2 class="pricing-plan">Все включено</h2>
                        <div class="price"><sup class="currency"></sup>1000<small>руб.</small></div>
                        <p>Абонемент для постоянных клиентов</p>
                        <hr>
                        <ul class="pricing-info">
                            <li>2 года действия</li>
                            <li>Безлимитные посещения</li>

                        </ul>
                        <input type="submit" name="tariff" value="A" placeholder="Приобрести" class="btn btn-default btn-sm" />
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>