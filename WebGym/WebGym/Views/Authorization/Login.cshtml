
@{
    var returnURL = ViewData["ReturnURL"] as string;
    var error = TempData["authError"] as string;

}

@if (!string.IsNullOrEmpty(error))
{
    <h2 class="danger text-center" style="padding:20px">@error</h2>
}
else
{ 
<h2 class="danger text-center" style="padding:20px">Авторизация</h2>
}

<div class="container" style="margin-top:20px;">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <h1 class="text-center login-title"></h1>
            <div class="account-wall">
                <img class="profile-img" src="/images/logo.png"
                     alt="">
                <form class="form-signin" action="/login?ReturnURL=@System.Net.WebUtility.UrlEncode(returnURL)" method="post">
                    <div class="row mb-3">
                        <input class="form-control" type="text" name="login" placeholder="Username" minlength="3" required />
                    </div>
                    <div class="row">
                        <input class="form-control" type="password" name="password" placeholder="Password" minlength="3" required />
                    </div>
                    <div class="row">
                        <input class="btn btn-lg btn-primary btn-block" type="submit" value="Войти" />
                    </div>
                    
                    <label class="checkbox pull-left">
                        <input type="checkbox" value="Запомнить">Запомнить
                    </label>
                    <a href="#" class="pull-right need-help"></a><span class="clearfix"></span>
                </form>
            </div>
            <form class="text-center new-account" asp-controller="Authorization" asp-action="Register">
                <input type="submit" class="btn btn-info" value="Зарегистрироваться" />
            </form>
           
        </div>
    </div>
</div>



