@model ScheduleModel

<style>
    .schedule-date {
        height: 36px;
        text-align: center;
        box-sizing: border-box;
        border: 2px solid white;
        background-color: white;
        border-radius: 3px;
        line-height: normal;
        margin-top: 4px;
        color: black;
    }


    .icon {
        width: 50px;
        height: 50px;
        background-color: white;
        border-radius: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-left: 5px;
    }

    .train-type {
        margin-top: 10px;
    }

    .card {
        height: 160px;
        text-align: center;
        box-sizing: border-box;
        border: 2px solid #e8e8e8;
        border-radius: 3px;
        line-height: normal;
        margin-top: 10px;
        color: black;
    }
</style>
<body style="background-color: #e2e8f0;">
    <h2 style="text-align:center;">Расписание клуба</h2>
    <div class="container-fluid ">
        <div class="row">
            @foreach(var dayPosition in Model.Positions)
            {
                <div class="col-sm-2">
                    <div class="schedule-date">
                        <strong style="margin-top:15px;">@dayPosition.Key</strong>
                    </div>
                    @foreach(var position in dayPosition.Value)
                    {
                        <div class="card ">
                            <div class="card-body">
                                <div class="d-flex flex-row align-items-center">
                                    <div class="ms-2 c-details">
                                        <h6 class="mb-0"></h6> <span>@position.StartTime : @position.FinishTime</span>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-1 icon"><img src="~/images/@position.ImageName" /></div>
                                        @position.CoachName
                                        <div class="col-sm-3">
                                            <div class="row train-type">@position.TrainType</div>
                                        </div>
                                    </div>

                                </div>
                            </div>


                        </div>
                    }
                </div>
            }
        </div>

    </div>

</body>

