@model ClientAccountModel

<div class="row" style="margin-top:-10px;">
    <div class="col-md-8 col-md-offset-2">
        <div class="row space-16">&nbsp;</div>
        <div class="row">
           
                <div class="col-sm-5 col-sm-offset-4">
                    <div class="thumbnail">
                        <div class="caption text-center">
                            <div class="position-relative">
                                <img src="~/images/profileImages/@Model.ImagePath" alt="Admin"
                                     class="rounded-circle" style="width:72px;height:72px;" />
                            </div>
                            <div class="thumbnail-description smaller">
                                @Model.FullName
                            </div>

                            <form enctype="multipart/form-data" asp-controller="Attendance" asp-action="Update">
                                <input name="statisticsId" value="@Model.Id" type="hidden" />
                                <input name="clientId" value="@Model.Id" type="hidden" />
                                <div>
                                    <div class="card-body ">
                                        <div class="row">
                                            <span style="font-size: 18px; margin-top: 10px; margin-bottom: 3px;" class="badge bg-info">Головное давление</span>
                                            <input style="font-size: 14px;" class="form-control text-center" name="headPressure" type="number" value="120" />
                                        </div>
                                        
                                        <div class="row">
                                            <span style="font-size: 18px; margin-top: 10px; margin-bottom:3px;" class="badge bg-info">Сердечное давление</span>
                                            <input style="font-size: 14px;" class="form-control text-center" name="heartPressure" type="number" value="80" />
                                        </div>

                                        <div class="row">
                                            <span style="font-size: 18px; margin-top: 10px; margin-bottom: 3px; " class="badge bg-info">Вес после тренировки</span>
                                            <input style="font-size: 14px;" class="form-control text-center" name="weight" type="number" step="0.1" value="60" />
                                        </div>
                                        <div class="row">
                                            <span style="font-size: 18px; margin-top: 10px; margin-bottom: 3px; " class="badge bg-info">Средний пульс</span>
                                            <input style="font-size: 14px;" class="form-control text-center" name="pulse" type="number" value="90" step="1" />
                                        </div>
                                        <div class="row">
                                            <span style="font-size: 18px; margin-top: 10px; margin-bottom: 3px; " class="badge bg-info">Потраченные калории</span>
                                            <input style="font-size: 14px;" class="form-control text-center" name="caloriesSpent" type="number" step=100 value="1000" />
                                        </div>
                                        <div style="margin-top:10px;">
                                            <input class="btn btn-success" type="submit" value="Внести" />
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            
            <div class="col-md-2">&nbsp;</div>
        </div>
    </div>
</div>

