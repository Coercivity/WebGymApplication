

@{
    var errorAccountExists = TempData["registartionErrorAccountExists"] as string;
    var error = TempData["registartionError"] as string;
    var success = TempData["registartionSuccess"] as string;
}

@if (!string.IsNullOrEmpty(error))
{
    <h2 class="danger text-center" style="padding:20px">@error</h2>
}
else if (!string.IsNullOrEmpty(errorAccountExists))
{
    <h2 class="danger text-center" style="padding:20px">@errorAccountExists</h2>
}
else if (!string.IsNullOrEmpty(success))
{
    <h2 class="danger text-center" style="padding:20px">@success</h2>
}
else
{
    <h2 class="success text-center" style="padding:20px">Введите данные</h2>
}



<div class="container" style="margin-top:20px;">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4 ">
            <h1 class="text-center login-title"></h1>
            <div class="account-wall thumbnail">
                <img class="profile-img" src="/images/logo.png"
                     alt="">
                <form class="form-signin" asp-controller="Registration" asp-action="TryRegister">
                    <div class="row mb-3">
                        <input class="form-control" type="text" name="login" placeholder="Username" minlength="3" required />
                    </div>
                    <div class="row mb-3">
                        <input class="form-control" type="email" name="email" placeholder="Email" minlength="3" required />
                    </div>
                    <div class="row mb-3">
                        <input class="form-control" type="password" name="password" placeholder="Password" minlength="3" required />
                    </div>
                    <div class="row mb-3">
                        <input class="btn btn-lg btn-primary btn-block" type="submit" value="Зарегистрироваться" />
                    </div>
                        <a href="#" class="pull-right need-help"></a><span class="clearfix"></span>
                </form>
            </div>
        </div>
    </div>
</div>

